{
  "printWidth": 120,
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "trailingComma": "none",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.vue"],
      "options": {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "proseWrap": "never"
      }
    }
  ]
}
